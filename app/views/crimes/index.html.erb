<h1> List of all Crimes </h1>
<table class="table">
  <thead>
    <tr>
      <th> City Name </th>
      <th> Locality Name</th>
      <th> Name </th>
      <th> Reporter-Name </th>
      <th> Crime_Description</th>
      <th> Crime-Time</th>
      <th> Priority </th>
      <th> Resolved </th>
      <th colspan=3> Actions </th>
    </tr>
    <tr>
  </thead>
    <tbody id="crime-table">
      <% @crimes.each do |crime| %>
       <%= render 'crime', crime: crime %>
      <% end %>
    </tbody>
</table>

<!-- Button trigger modal for adding new Crime -->
<button type="button", class="btn btn-primary", data-bs-toggle="modal", data-bs-target="#newModal">
  Report A Crime
</button>
<!--  Add New Client Modal -->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add new Crime</h5>
        <button type="button" id= "closeNewForm" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="newerrors"></div>
          <%= render 'form' %>
      </div>
    </div>
    <script>
    $(document).on('change', '#city', function getLocalities() {
      var selectedCities = $(this).val();
      $.ajax({
        url: "/locality_by_city",
        method: "GET",
        data: { cities: selectedCities },
        success: function(data) {
          $("#locality_ids").html(data);
        }
      });
    });
  </script>
</div>
  <br/>
<p>
  <%= link_to 'Home' , root_path %>
</p>