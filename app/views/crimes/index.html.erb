<h1> List of all Crimes </h1>
<table>
  <thead>
    <tr>
      <th> City Name </th>
      <th> Locality Name</th>
      <th> Name </th>
      <th> Reporter-Name </th>
      <th> Crime_Description</th>
      <th> Crime-Time</th>
      <th> Priority </th>
      <th> Resolved </th>
      <th colspan=3> Actions </th>
    </tr>
    <tr>
  </thead>
    <tbody>
      <% @crime.each do |crime| %>
        <tr>
      <td><%= crime.city.name%></td>
      <td><%= crime.locality.street%></td>
      <td><%= crime.name%></td>
      <td><%= crime.crime_reporter.reporter_name if crime.crime_reporter %></td>
      <td><%= crime.crime_description%></td>
      <td><%= crime.crime_time%></td>
      <% if crime.priority == 'High' %>
        <td style="color: red"><%= crime.priority %></td>
      <% elsif crime.priority == 'Medium' %>
        <td style="color: yellow"><%= crime.priority %></td>
      <% elsif crime.priority == 'Low' %>
        <td style="color: green"><%= crime.priority %></td>
      <% end %>
      <td><%= crime.resolved%></td>
      <td><%= link_to 'Show', crime_path(crime) %></td>
      <td><%= link_to 'Edit', edit_crime_path(crime) %></td>
      <td><%= link_to 'Delete', crime_path(crime) , method: :delete , data: {confirm: "Are you sure?"}%></td>
        </tr>
      <% end %>
    </tbody>
</table>

<p>
  <%= link_to 'Report New Crime' , new_crime_path %>
</p>

<p>
  <%= link_to 'Home' , root_path %>
</p>