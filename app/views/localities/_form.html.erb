<!-- Add Locality form -->
<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Add New Locality</div>
        <div class="card-body">
          <%= form_with scope: :locality, url: localities_path, data: {remote: true} do |f| %>
             <div class="form-group">
              <%= f.label :Name %>
              <%= f.text_field :name, class: 'form-control'%>
            </div
            <div class="form-group">
              <label for="city_id">Select City</label>
              <%= f.select :city_id, City.all.collect {|x| [x.name, x.id]}, {}, class: 'form-control' %>
            </div>
            <div class="card-footer text-muted">
              <%= f.submit " Add Locality ", class: 'btn btn-primary' %>
              <%= link_to 'Back' , localities_path, class:'btn btn-secondary' %>
            </div>
          <% end%>
        </div>
      </div>
    </div>
  </div>
</div>