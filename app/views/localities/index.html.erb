<h1> List of all Localities of</h1>
<table>
  <thead>
    <tr>
      <th> Places </th>
      <th colspan=3> Actions </th>
    </tr>
  </thead>
    <tbody>
      <% @locality.each do |locality| %>
        <tr>
      <td><%= locality.street %></td>
      <td><%= link_to 'Show', locality_path(locality) %></td>
      <td><%= link_to 'Edit', edit_locality_path(locality) %></td>
      <td><%= link_to 'Delete', locality_path(locality) , method: :delete , data: {confirm: "Are you sure?"}%></td>
        </tr>
      <% end %>
    </tbody>
</table>

<p>
  <%= link_to 'Add new Locality' , new_locality_path %>
</p>

<p>
  <%= link_to 'Home' , root_path %>
</p>