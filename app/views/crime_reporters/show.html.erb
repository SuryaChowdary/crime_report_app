<h1> Showing Crime Reporters in Portal</h1>

<p><strong> Name: </strong> <%= @crime_reporter.name %></p>
<p><strong> Gender: </strong> <%=@crime_reporter.gender%>
<p><strong> Phone: </strong> <%=@crime_reporter.phone%>
<p><strong> Email: </strong> <%= @crime_reporter.email%></p>

<p><strong> List of all Crimes Reported by <%=@crime_reporter.name%> are</strong><p>
<table>
  <thead>
    <tr>
      <th> Reporter-Name </th>
      <th> Crime_Description</th>
      <th> Crime-Time</th>
      <th> Priority </th>
      <th> Resolved </th>
      <th colspan=3> Actions </th>
    </tr>
    <tr>
  </thead>
  <tbody>
    <% @crime_reporter.crimes.each do |crime| %>
      <tr>
          <td><%= crime.name %></td>
          <td><%= crime.crime_description %></td>
          <td><%= crime.crime_time %></td>
          <td><%= crime.priority %></td>
          <td><%= crime.resolved %></td>
        <td><%= link_to 'Show', crime_path(crime) %></td>
        <td><%= link_to 'Edit', edit_crime_path(crime) %></td>
        <td><%= link_to 'Delete', crime_path(crime) , method: :delete , data: {confirm: "Are you sure?"}%></td>
        </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Back' , crime_reporters_path %>
</p>