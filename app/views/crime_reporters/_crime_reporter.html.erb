 <tr id="crime_reporter-<%= crime_reporter.id %>">
  <td><%= crime_reporter.name %></td>
  <td><%= crime_reporter.gender %></td>
  <td><%= crime_reporter.phone %></td>
  <td><%= crime_reporter.email %></td>
  <td><%= link_to 'Show', crime_reporter_path(crime_reporter), class: 'btn btn-info', data:{remote: true, bs_toggle: "modal", bs_target: "#showcrime_reporter-#{crime_reporter.id}"} %></td>
  <td><%= link_to 'Edit', edit_crime_reporter_path(crime_reporter),class: 'btn btn-primary', data: {remote: true, bs_toggle: "modal", bs_target: "#editcrime_reporter-#{crime_reporter.id}"} %></td>
  <td><%= link_to 'Delete', crime_reporter_path(crime_reporter) ,method: :delete , data: {remote: true, confirm: "Are you sure?"},class: 'btn btn-danger' %></td>
</tr>

<!-- Edit Crime Reporter Modal -->
<div class="modal fade" id="editcrime_reporter-<%= crime_reporter.id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Crime Reporter Details</h5>
        <button type="button" class="closeEditForm" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="editerrors-<%= crime_reporter.id %>"></div>
        <div class="container">
          <div class="row justify-content-center mt-4 ">
            <div class="col-md-8">
              <div class="card">
                <div class="card-header">Edit Crime Reporter Details</div>
                <div class="card-body">
                  <%= form_with(model: crime_reporter, data: { remote: true}, method: :patch, id: 'edit-form' ) do |f| %>
                     <div class="form-group"> 
                      <%= f.label :Name %> <br/>
                      <%= f.text_field :name, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :Phone%> <br/>
                      <%= f.text_field :phone, class: 'form-control' %>
                    </div>
                    <div class="form-group"> 
                      <%= f.label :Email %> <br/>
                      <%= f.text_field :email, class: 'form-control'%>
                    </div>
                    <div class="form-group">    
                      <%= f.label :Gender %></br>
                      <span class="option">Male<span><%= f.radio_button :gender, "Male" %></br>
                      <span class="option">Female<span><%= f.radio_button :gender, "Female" %></br>
                      <span class="option">Others<span><%= f.radio_button :gender, "Others" %></br>
                    </div>
                    <div class="card-footer text-muted">
                      <%= f.submit " Update Details", class: 'btn btn-primary'%>
                      <%= link_to 'Back', crime_reporters_path, class: 'btn btn-secondary' %>          
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Crime Reporter Show page modal -->
<div class="modal fade" id="showcrime_reporter-<%= crime_reporter.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Crime Reporter Details</h4>
        <button type="button" id= "closeShowForm" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="container mt-5">
          <div class="card">
            <div class="card-header">
              <h1 class="card-title"><%= crime_reporter.name %></h1>
            </div>
            <div class="card-body">
              <% if crime_reporter.crimes.any? %>
                <h2 class="card-subtitle mb-2 text-muted">List of all crimes reported by  <%= crime_reporter.name %></h2>
                <% crime_reporter.crimes.each do |crime| %>
                  <div class="crime-info">
                    <p><strong>Reporter Name:</strong> <%= crime.name %></p>
                    <p><strong>Crime Description:</strong> <%= crime.crime_description %></p>
                    <p><strong>Crime Time:</strong> <%= crime.crime_time %></p>
                    <p><strong>Priority:</strong> <%= crime.priority %></p>
                    <p><strong>Resolved:</strong> <%= crime.resolved %></p><br/>
                  </div>
                <% end %>
              <% else %>
               <h2 class="card-subtitle mb-2 text-muted">No Crimes were reported by <%= crime_reporter.name %> </h2>
              <% end %>
            <div class="card-footer text-muted">
              <%= link_to 'Back', crime_reporters_path, class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
