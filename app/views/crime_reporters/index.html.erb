<h1> List of all Crime Reporters in Portal</h1>
<table class="table">
  <thead>
    <tr>
      <th> Name </th>
      <th> Gender </th>
      <th> Phone Number</th>
      <th> Email </th>
      <th colspan="3"> Actions </th>
    </tr>
  </thead>
    <tbody id= "crime_reporter-table">
      <% @crime_reporters.each do |crime_reporter| %>
        <%= render 'crime_reporter' , crime_reporter: crime_reporter %>
      <% end %>
    </tbody>
</table>

<!-- Button trigger modal for adding new client -->
<button type="button", class="btn btn-primary", data-bs-toggle="modal", data-bs-target="#newModal">
  Add New Crime Reporter
</button>
<!--  Add New Client Modal -->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add new Crime Reporter</h5>
        <button type="button" id= "closeNewForm" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="newerrors"></div>
          <%= render 'form' %>
      </div>
    </div>
  </div>
<br/>
<p>
  <%= link_to 'Home' , root_path, class: 'btn btn-warning' %>
</p>