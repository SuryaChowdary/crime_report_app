<tr id="city-<%= city.id %>">
  <td><%= city.name %></td>
  <td><%= link_to 'Show', city_path(city), class: 'btn btn-primary', data: {remote: true, bs_toggle: "modal", bs_target: "#showcity-#{city.id}"} %></td>
  <td><%= link_to 'Edit', edit_city_path(city), class: 'btn btn-secondary', data: {remote: true, bs_toggle: "modal", bs_target:"#editcity-#{city.id}"    } %></td>
  <td><%= link_to 'Delete', city_path(city) , method: :delete , data: {remote: true, confirm: "Are you sure?"}, class: 'btn btn-danger' %></td>
</tr>

<!-- Edit City Modal -->
<div class="modal fade" id="editcity-<%= city.id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit City Details</h5>
        <button type="button" class="closeEditForm" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="editerrors-<%= city.id %>"></div>
        <div class="container">
          <div class="row justify-content-center mt-4 ">
            <div class="col-md-8">
              <div class="card">
                <div class="card-header">Edit City Details</div>
                <div class="card-body">
                  <%= form_with(model: city, data: { remote: true}, method: :patch, id: 'edit-form' ) do |f| %>
                     <div class="form-group"> 
                      <%= f.label :Name %> <br/>
                      <%= f.text_field :name, class: 'form-control' %>
                    </div>
                    <div class="card-footer text-muted">
                      <%= f.submit " Update Details", class: 'btn btn-primary'%>
                      <%= link_to 'Back', cities_path, class: 'btn btn-secondary' %>          
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- City Show page modal -->
<div class="modal fade" id="showcity-<%= city.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">City Details</h4>
        <button type="button" id= "closeShowForm" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="container mt-5">
          <div class="card">
            <div class="card-header">
              <h1 class="card-title"><%= city.name %></h1>
            </div>
            <div class="card-body">
              <% if city.crimes.any? %>
                <h2 class="card-subtitle mb-2 text-muted">List of all crimes in <%= city.name %></h2>
                <% city.crimes.each do |crime| %>
                  <div class="crime-info">
                    <p><strong>Reporter Name:</strong> <%= crime.name %></p>
                    <p><strong>Crime Description:</strong> <%= crime.crime_description %></p>
                    <p><strong>Crime Time:</strong> <%= crime.crime_time %></p>
                    <p><strong>Priority:</strong> <%= crime.priority %></p>
                    <p><strong>Resolved:</strong> <%= crime.resolved %></p><br/>
                  </div>
                <% end %>
              <% else %>
               <h2 class="card-subtitle mb-2 text-muted">No Crimes were reported in <%= city.name %> </h2>
              <% end %>
            <div class="card-footer text-muted">
              <%= link_to 'Back', cities_path, class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
