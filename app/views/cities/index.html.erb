<h1> List of all Cities </h1>
<table class="table">
  <thead>
    <tr>
      <th> Name </th>
      <th colspan=3> Actions </th>
    </tr>
    <tr>
  </thead>
    <tbody id="city-table">
      <% @cities.each do |city| %>
        <%= render 'city', city: city  %>
      <% end %>
    </tbody>
</table>

<!-- Button trigger modal for adding new city -->
<button type="button", class="btn btn-primary", data-bs-toggle="modal", data-bs-target="#newModal">
  Add New City
</button>
<!--  Add New City Modal -->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add new City</h5>
        <button type="button" id= "closeNewForm" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="newerrors"></div>
          <%= render 'form' %>
      </div>
    </div>
  </div>
<p>
  <%= link_to 'Add new City' , new_city_path %>
</p>

<p>
  <%= link_to 'Home' , root_path %>
</p>