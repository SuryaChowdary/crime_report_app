<!-- Add City form -->
<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Add New City</div>
        <div class="card-body">
          <%= form_with scope: :city, url: cities_path, data: {remote: true} do |f| %>
            <div class="form-group"> 
              <%= f.label :Name %> <br/>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="card-footer text-muted">
              <%= f.submit "Add City ", class: 'btn btn-primary' %>
              <%= link_to 'Back' , cities_path, class:'btn btn-secondary' %>
            </div>
          <% end%>
        </div>
      </div>
    </div>
  </div>
</div>